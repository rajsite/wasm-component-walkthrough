{
  "name": "wasi-http-app",
  "version": "1.0.0",
  "private": "true",
  "type": "module",
  "scripts": {
    "build:wit": "wkg wit fetch",
    "build:wit:types": "jco guest-types wit -o objs/types",
    "build:js": "rollup -c rollup.config.js",
    "build:wasm": "mkdirp dist && jco componentize -w wit -o dist/main.wasm objs/bundled/main.js",
    "build": "node --run build:wit && node --run build:wit:types && node --run build:js && node --run build:wasm",
    "start": "wasmtime serve --addr 127.0.0.1:8000 -S cli=y dist/main.wasm",
    "pack": "npm pack",
    "clean": "git clean -fdx -e '.env.*'",
    "check": "tsc"
  },
  "devDependencies": {
    "@bytecodealliance/jco": "1.13.1",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "mkdirp": "^3.0.1",
    "rollup": "^4.34.8",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "tslib": "^2.8.1"
  }
}
